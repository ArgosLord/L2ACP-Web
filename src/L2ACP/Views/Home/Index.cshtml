@using L2ACP.Controllers
@using L2ACP.Extensions
@{
    ViewData["Title"] = "Home Page";
}
@model IndexViewModel

<div id="wrapper">
    <nav class="navbar-default navbar-static-side" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav metismenu" id="side-menu">
                <li class="nav-header">
                    <div class="dropdown profile-element">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="clear">
                                <span class="block m-t-xs">
                                    <strong class="font-bold">@Context.GetUsername()</strong>
                                </span> <span class="text-muted text-xs block">Options <b class="caret"></b></span>
                            </span>
                        </a>
                        <ul class="dropdown-menu animated fadeInRight m-t-xs">
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                    <div class="logo-element">
                        L2ACP
                    </div>
                </li>
                <li class="active">
                    <a href="/"><i class="fa fa-th-large"></i> <span class="nav-label">Dashboard</span></a>
                </li>
                <li>
                    <a href="layouts.html"><i class="fa fa-briefcase"></i> <span class="nav-label">Services</span></a>
                </li>
                
            </ul>

        </div>
    </nav>


    <div id="page-wrapper" class="gray-bg dashbard-1">
        <div class="row border-bottom">
            <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                </div>
                <ul class="nav navbar-top-links navbar-right">
                    <li>
                        <span class="m-r-sm text-muted welcome-message">Welcome to L2ACP</span>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                            <i class="fa fa-bell"></i>  <span class="label label-primary">8</span>
                        </a>
                        <ul class="dropdown-menu dropdown-alerts">
                            <li>
                                <div class="text-center link-block">
                                    <a href="notifications.html">
                                        <strong>See All Alerts</strong>
                                        <i class="fa fa-angle-right"></i>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </li>


                    <li>
                        <a href="/logout">
                            <i class="fa fa-sign-out"></i> Log out
                        </a>
                    </li>
                   
                </ul>

            </nav>
        </div>
        <div class="row  border-bottom white-bg dashboard-header">

            <div class="col-md-9">
                <h2>Welcome @Context.GetUsername()</h2>
                <select id="charsSelect" class="form-control m-b" asp-items="new SelectList(Model.CharacterNames)" name="account">
                    <option selected="selected" disabled="disabled">Please select a character</option>
                </select>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-3">
                            <div id="charinfo"></div>
                        </div>
                        <div class="col-lg-3">
                            <div id="inventory"></div>
                        </div>
                        </div>
                </div>
                <div class="col-md-3">

                </div>

                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="wrapper wrapper-content">

                        </div>
                        <div class="footer">
                            <div>
                                <strong>Copyright</strong> L2ACP &copy; 2017
                            </div>
                        </div>
                    </div>
                </div>

            </div>

</div>


@section Scripts{
    <script>
        $('#charsSelect').change(function() {
            var charName = $("#charsSelect option:selected").val();
            $.get("/getinventory/" + charName,
                function(data) {
                    $('#inventory').html(data);
                });

            $.get("/getplayerinfo/" + charName,
                function (data) {
                    $('#charinfo').html(data);
                });
        });
    </script>
}